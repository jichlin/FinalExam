<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Binus Project</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="color:white;background-color:dodgerblue">
        <div class="container">
            <span style="float:right">@Html.ActionLink("Log Out", "Logout", "Login", new {} ,new { @id = "btnLogOut" })</span>  
            <div style="margin:0 auto; text-align:center" >
                <h3>Welcome , @Session[SessionEnum.NAMEUSER].ToString()</h3>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Project Management","Index","Project",new { }, new { @class = "linkNav" })</li>
                    <li>@Html.ActionLink("User", "Index", "User" , new { }, new { @class = "linkNav" })</li>

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="margin-top:25px">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/dataTable")  
    @Scripts.Render("~/bundles/datePicker")



    @RenderSection("scripts", required: false)
</body>
</html>
